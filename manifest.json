{
  "manifest_version": 3,
  "name": "Simple Todo List",
  "version": "1.0",
  "description": "A lightweight and user-friendly Chrome extension for managing your daily tasks",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 